<h1 class="glow-text">📜 Aktive Abmeldungen</h1>

<div class="container">
    <% if (loaData.length === 0) { %>
        <p class="no-loa-message">✅ Aktuell gibt es keine aktiven Abmeldungen.</p>
    <% } else { %>
        <ul class="stat-list">
            <% loaData.forEach(loa => { %>
                <li class="active-loa">
                    👤 <h><%= loa.soldier_name || "Unbekannt" %></h>
                    👤 <p>@<%= loa.username || "Unbekannt" %></p>
                    📅 <b>Von:</b> <%= loa.from_date !== "Unbekannt" ? loa.from_date : "Unbekannt" %> <br>
                    📅 <b>Bis:</b> <%= loa.to_date !== "Unbekannt" ? loa.to_date : "Unbekannt" %> <br>
                    📝 <b>Grund:</b> <%= loa.reason %> <br>
                </li>
            <% }); %>
        </ul>
    <% } %>
</div>
