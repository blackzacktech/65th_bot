<h1 class="glow-text">👥 Benutzerübersicht</h1>

<!-- Suchfeld -->
<div class="search-container">
    <form action="/user" method="get">
        <input type="text" name="search" placeholder="Nach Soldaten Name oder Benutzername suchen..." value="<%= searchTerm %>">
        <button type="submit">🔍 Suchen</button>
    </form>
</div>

<!-- 📜 Container für die Tabelle -->
<div class="container">
    <div class="user-table-container">
        <table class="user-table">
            <thead>
                <tr>
                    <th>Soldaten Name</th>
                    <th>Benutzername</th>
                    <th>📨</th>
                    <th>🎙️</th>
                    <th>🏆</th>
                    <th>🔗</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user['Soldaten Name'] || "N/A" %></td>
                        <td><%= user.username %></td>
                        <td><%= user.messages_sent %></td>
                        <td><%= user.voice_minutes %></td>
                        <td><%= user.activity_points %></td>
                        <td>
                            <a href="/<%= user.user_id %>/info" class="profile-link">🔍</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>