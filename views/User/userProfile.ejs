<h1 class="glow-text">👤 Profil von <%= ctNumber %></h1>

<!-- Profilbild + Soldatenname -->
<div class="container image-container">
    <img src="<%= avatarURL %>" alt="Profilbild von <%= ctNumber %>" class="profile-image">
    <h2 class="soldier-name"><%= soldierName %></h2> <!-- Soldatenname -->
    <p class="discord-name">@<%= username %></p> <!-- Discord-Name -->
    <h3>📅 Beigetreten am: <span class="highlight"><%= joinedAt %></span></h3>
</div>

<!-- Militärische Informationen -->
<div class="container military-info">
    <h3>🛡️ <span class="highlight">Dienstgrad & Zugehörigkeit</span></h3>
    <ul class="stat-list">
        <li><b>🛠 Ebene:</b> <%= militaryLevel %></li>
        <li><b>🎖 Rang:</b> <%= militaryRank %></li>
        <hr>
        <li><b>🏅 Medaillen:</b> <%= medals %></li>
        <hr>
        <li><b>⚔️ Klasse:</b> <%= classType %></li>
    </ul>
</div>

<!-- Server-Aktivität -->
<div class="container">
    <h3>📊 <span class="highlight">Server-Interaktionen</span></h3>
    <ul class="stat-list">
        <li>💬 <b>Nachrichten gesendet:</b> <%= messagesSent %></li>
        <li>🎤 <b>Voice-Minuten:</b> <%= voiceMinutes %></li>
        <li>🌟 <b>Aktivitätspunkte:</b> <%= activityPoints %></li>
    </ul>
</div>

<div class="container">
    <h3>📖 Charaktergeschichte</h3>
    <div class="wiki-content"><%- story ? story : "Keine Story eingetragen." %></div>
</div>


<!-- LOA Übersicht -->
<div class="container">
    <h3>📅 <span class="highlight">LOA Abmeldungen</span></h3>
    <p>📝 Anzahl: <a href="/<%= userId %>/loa"><b><%= loaCount %></b></a></p>
</div>

<!-- 🔹 Einweisungsübersicht -->
<div class="container">
    <h3>📜 <span class="highlight">Einweisungen</span></h3>
    <p>📌 Anzahl: <a href="/<%= userId %>/instructions"><b><%= instructionCount %></b></a></p>
</div>
