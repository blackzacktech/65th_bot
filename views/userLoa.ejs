<h1 class="glow-text">📜 LOA Übersicht von <%= ctNumber %></h1>

<div class="container">
    <% if (loaData.length === 0) { %>
        <p>✅ Keine Abmeldungen gefunden.</p>
    <% } else { %>
        <ul class="stat-list">
            <% loaData.forEach(loa => { 
                let isActive = new Date(loa.to_date) >= new Date(); // 🔥 Prüft, ob Abmeldung aktiv ist
                let statusClass = isActive ? "active-loa" : "inactive-loa"; // 🟡 Gelb für aktive, 🔴 Rot für inaktive
            %>
                <li class="<%= statusClass %>">
                    📅 <b>Von:</b> <%= new Date(loa.from_date).toLocaleDateString("de-DE") %> <br>
                    📅 <b>Bis:</b> <%= new Date(loa.to_date).toLocaleDateString("de-DE") %> <br>
                    📝 <b>Grund:</b> <%= loa.reason %> <br>
                </li>
            <% }); %>
        </ul>
        
    <% } %>
</div>
