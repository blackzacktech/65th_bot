<h1 class="glow-text">📜 LOA Übersicht von <%= ctNumber %></h1>

<div class="container">
    <% if (loaData.length === 0) { %>
        <p>✅ Keine Abmeldungen gefunden.</p>
    <% } else { %>
        <ul class="stat-list">
            <% loaData.forEach(loa => { 
                let isActive = loa.to_date !== "Unbekannt" && new Date(loa.to_date.split('.').reverse().join('-')) >= new Date();
                let statusClass = isActive ? "active-loa" : "inactive-loa";
            %>
                <li class="<%= statusClass %>">
                    📅 <b>Von:</b> <%= loa.from_date %> <br>
                    📅 <b>Bis:</b> <%= loa.to_date %> <br>
                    📝 <b>Grund:</b> <%= loa.reason %> <br>
                </li>
            <% }); %>
        </ul>
    <% } %>
</div>
